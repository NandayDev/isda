generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  role      Role     @default(USER)
}

model Voter {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  image     String?
  type      VoterType @default(PERSON)
  votes     Vote[]
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  voter     Voter    @relation(fields: [voterId], references: [id])
  voterId   String
  voteData  Json
  Votee     Votee?   @relation(fields: [voteeId], references: [id])
  voteeId   String?
}

model Votee {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  votes     Vote[]
}

enum Role {
  USER
  ADMIN
}

enum VoterType {
  PERSON
  CHAT
}
